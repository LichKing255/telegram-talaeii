<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/asanpardakht_SDKTheme_setare_aval_window_color" android:layout_width="match_parent" android:layout_height="match_parent" app:elevation="5dp">
