        <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/ll_btn_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="10dp">
            <utils.view.FarsiTextView android:textSize="16sp" android:textColor="@color/colorPrimary" android:id="@+id/btn_done" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Done" android:layout_alignParentLeft="true"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
