<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/rl_notification_list_row" android:background="@color/white" android:paddingLeft="10dp" android:paddingTop="@dimen/news_item_top_pad" android:paddingRight="10dp" android:paddingBottom="@dimen/news_item_top_pad" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/main_left_padding" android:layout_marginRight="@dimen/main_right_padding">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/iv_news_image2" android:background="@drawable/border_cluster" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
            <utils.view.RoundedImageView android:id="@+id/iv_news_image" android:layout_width="80dp" android:layout_height="80dp" android:scaleType="centerCrop" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:transitionName="ivMain2"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_news_image2" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
            <utils.view.FarsiTextView android:textSize="@dimen/txt_time_size" android:textColor="@color/light_gray" android:layout_gravity="right" android:id="@+id/txt_time" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_below="@+id/txt_time" android:layout_alignParentRight="true">
                <utils.view.TitleTextView android:textSize="@dimen/text_size" android:textColor="@color/black" android:ellipsize="end" android:gravity="right" android:id="@+id/txt_title" android:paddingRight="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/news_item_title_margin" android:maxLines="2" android:lineSpacingMultiplier="0.9"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/rl1" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv_agency" android:visibility="visible" android:layout_width="@dimen/agency_logo_w" android:layout_height="@dimen/agency_logo_h" android:layout_marginLeft="2dp" android:layout_marginRight="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <utils.view.FarsiTextView android:textSize="12sp" android:textColor="@color/light_gray" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_source" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/iv_agency" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/iv_pic_count" android:visibility="gone" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginLeft="3dp" android:layout_marginRight="5dp" android:src="@drawable/ic_pic" android:layout_toLeftOf="@+id/txt_source" android:layout_centerVertical="true"/>
        <utils.view.FarsiTextView android:textSize="10sp" android:textColor="@color/black" android:gravity="center_vertical" android:id="@+id/ftv_pic_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/iv_pic_count" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/v_home_divider" android:background="@color/divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_marginTop="3dp"/>
</LinearLayout>
